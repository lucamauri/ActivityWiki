{
  "name": "lucamauri/activitywiki",
  "description": "ActivityPub support for MediaWiki - Integrate your MediaWiki instance with the Fediverse via ActivityPub.",
  "keywords": [
    "mediawiki",
    "activitypub",
    "fediverse",
    "federation",
    "mastodon"
  ],
  "homepage": "https://github.com/lucamauri/ActivityWiki",
  "license": "GPL-2.0-or-later",
  "type": "mediawiki-extension",
  "authors": [
    {
      "name": "Luca Mauri",
      "homepage": "https://www.lucamauri.com"
    }
  ],
  "require": {
    "php": ">=7.2.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpunit/phpunit": "^9.5",
    "mediawiki/mediawiki-codesniffer": "38.0.0",
    "mediawiki/mediawiki-phan-config": "0.12.1"
  },
  "scripts": {
    "test": "phpunit",
    "lint": "phpcs",
    "fix": "phpcbf"
  },
  "autoload": {
    "psr-4": {
      "MediawikiActivityPub\\": "includes/"
    }
  },
  "config": {
    "allow-plugins": {
      "mediawiki/mediawiki-codesniffer": true,
      "mediawiki/mediawiki-phan-config": true
    }
  }
}
